<pre>
public class InlineExamConsole implements ExamConsole
{
    @Qualifier("exam2")
    @Autowired(required=false)  // ê¸°ë³¸ ìƒì„±ìê°€ í˜¸ì¶œ ë˜ë©´ì„œ ë°”ì¸ë”©(injection ë¨)
    private Exam exam;

    @Qualifier("exam2")
    @Autowired(required=false)
    public InlineExamConsole(@Qualifier("exam2")Exam exam){
        this.exam = exam;
    }

    @Qualifier("exam2")
    @Autowired(required=false)
    public void setExam(Exam exam){
        this.exam = exam;
    }
}
